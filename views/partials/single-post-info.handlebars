<div class="post">
  <div class="grid-x">
    <div class="cell medium-7 large-7">
      <h2><a href="/post/{{id}}">{{title}}</a></h2>
    </div>
    <div class="cell medium-3 large-4 post-meta">
      <p>Posted by
        {{user.username}}
        on
        {{format_date created_at}}</p>
    </div>
    <div class="cell medium-1 large-1 text-center vote-cont">
      <form id="vote-up">
        <button type="submit"><i
            data-feather="arrow-up"
            class="green"
          ></i></button>
      </form>
      <span
        id="vote-num"
        data-index-number="{{vote_count}}"
      >{{vote_count}}</span>
      <form id="vote-down">
        <button type="submit"><i
            data-feather="arrow-down"
            class="red"
          ></i></button>
      </form>

    </div>
  </div>
  <div class="row post-body">
    <p>{{content}}</p>
    {{#if image_url.length}}
      <img src="{{image_url}}" alt="Blog Post Image" width="500" height="600" />
    {{/if}}
  </div>
</div>