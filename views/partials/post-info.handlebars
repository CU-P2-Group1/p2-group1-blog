<div class="post">
  <div class="grid-x">
    <div class="cell medium-7 large-9">
      <h2><a href="/post/{{id}}">{{title}}</a></h2>
    </div>
    <div class="cell medium-3 large-2">
      <p>Posted by
        {{user.username}}
        on
        {{format_date created_at}}</p>
    </div>
      <div class="cell medium-1 large-1 text-center">
          <i data-feather="arrow-up" class="green"></i><br/>
          <span class="white-label">0</span> <br/>
          <i data-feather="arrow-down" class="red"></i>

      </div>
  </div>
  <div class="row post-body">
    <p>{{content}}</p>
  </div>
</div>