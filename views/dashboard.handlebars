{{#if posts.length}}
  <section>
    <h2>Your Posts</h2>
    {{#each posts as |post|}}
      <div class="post px-3 my-3">
        <div class="grid-x">
          <div class="cell medium-8 large-10">
            <h2><a href="/dashboard/edit/{{id}}">{{title}}</a></h2>
          </div>
          <div class="cell medium-4 large-2">
            <p>{{format_date created_at}}</p>
          </div>
        </div>
      </div>
    {{/each}}
  </section>
{{/if}}

<div class="new-post text-center">
  <a href="/dashboard/new" class="button medium medium-only-expanded">+ New Post</a>
</div>