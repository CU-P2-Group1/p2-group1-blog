<div class="card">
  <h2 class="card-header">Sign Up</h2>
  <form class="signup-form">
    <div>
      <label for="username-signup" class="form-label">Username</label>
      <input type="text" class="form-control" id="username-signup" />
    </div>
    <div>
      <label for="password-signup" class="form-label">Password</label>
      <input type="password" class="form-control" id="password-signup" />
    </div>
    <div>
      <button type="submit" class="btn-form">Sign Up!</button>
    </div>
    <div>
      <a href="/login" class="button small medium-only-expanded">Login instead</a>
    </div>
  </form>
</div>

<script src="/javascript/signup.js"></script>